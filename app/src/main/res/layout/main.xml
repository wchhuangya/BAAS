<?xml version="1.0" encoding="utf-8"?>
<com.ch.wchhuangya.baas.components.SideSlip
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sideSlip="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_sideslip"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    sideSlip:rightMargin="30dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <include layout="@layout/main_left" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <Button
                android:id="@+id/main_content_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左侧菜单"/>
        </LinearLayout>

    </LinearLayout>

</com.ch.wchhuangya.baas.components.SideSlip>